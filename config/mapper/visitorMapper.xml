<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.zjh.ssmpro.dao.VisitorDao">
	<insert id="insertVisitor" parameterType="Visitor">
		insert into
			visitors(name,password)
		values(#{name},#{password})
	</insert>

	<select id="queryVisitorByNameAndPassword"  resultType="Visitor">
		select
		id,
		name,
		password
		from
		visitors
		where
		name=#{name}
		AND
		password=#{password}
		AND
		status=#{status}
	</select>


	<select id="queryVisitorByName"  resultType="Visitor">
		select
		id,
		name,
		password
		from
		visitors
		where
		name=#{name}
	</select>
	<select id="queryVisitorByType"  resultType="Visitor">
		select
		*
		from
		visitors
		where
		type=#{type}
	</select>

	<select id="queryVisitorByVid"  resultType="Visitor">
		select
		*
		from
		visitors
		where
		id=#{vid}
	</select>
	<!--<insert id="insertResums" parameterType="Resums">-->
		<!--insert into-->
		<!--resums(name,sex,age,school,experience,skill,hobby,advantage,weakness,vid)-->
		<!--values(#{name},#{sex},#{age},#{school},#{experience},#{skill},#{hobby},#{advantage},#{weakness},#{vid})-->
	<!--</insert>-->
	<update id="updateVisitorByVid" parameterType="Resums">
		update visitors set name=#{name},password=#{password},status=#{status} where id=#{id}
	</update>
</mapper>







		
