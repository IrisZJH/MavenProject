<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.zjh.ssmpro.dao.EmployeesDao">
	<!--录用时-->
	<insert id="insertEmployees" parameterType="Employees">
		insert into
			employees(name,password)
		values(#{name},#{password})
	</insert>
<!--登陆时-->
	<select id="queryEmployeesByNameAndPassword"  resultType="Employees">
		select
		*
		from
		employees
		where
		name=#{name}
		AND
		password=#{password}
	</select>

	<select id="queryAllEmployees"  resultType="Employees">
		select
		*
		from
		employees
	</select>

